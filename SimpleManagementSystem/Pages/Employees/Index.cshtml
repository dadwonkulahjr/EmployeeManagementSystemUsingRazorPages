@page
@model SimpleManagementSystem.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "List Of Employees";

}
<style>
    .btn {
        width: 75px;
    }
</style>

<h1>Employee Information</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Employee Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>
                    @employee.Id
                </td>
                <td>
                    @employee.Name
                </td>
                <td>
                    @employee.Email
                </td>
                <td>
                    @employee.Department
                </td>
                <td>
                    <a class="btn btn-outline-secondary mt-2" asp-route-id="@employee.Id" asp-page="/Employees/Details">Details</a>
                    <a asp-route-id="@employee.Id" class="btn btn-outline-primary mt-2" asp-page="/Employees/Edit">Edit</a>
                    <a class="btn btn-danger mt-2 text-white">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>